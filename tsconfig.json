{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "lib": ["es2024", "DOM"],
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  }
}
